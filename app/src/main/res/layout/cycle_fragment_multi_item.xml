<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/multi_item_bg"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_5">
    <!-- ======= layout_score ===================================================== -->
    <LinearLayout
            android:id="@+id/layout_score"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/dp_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <RatingBar
                android:id="@+id/ratingBar"
                style="@style/foodRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="bottom"
                >
            <TextView
                    android:id="@+id/tvScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/color_37B48B"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="åˆ†"
                    android:layout_marginStart="@dimen/dp_2"
                    android:textColor="@color/color_text_normal"
                    android:textSize="12sp"
                    android:textStyle="bold"
                     />
        </LinearLayout>

    </LinearLayout>

    <!-- ======= layout_press ===================================================== -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_press"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingTop="@dimen/dp_10"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_score">

        <com.pr.perfectrecovery.view.DialChart07View
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:id="@+id/dashBoard"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@mipmap/icon_wm_bp_1"
                android:visibility="visible"
                android:layout_marginTop="@dimen/dp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <com.pr.perfectrecovery.view.PressLayoutView2
                android:id="@+id/pressLayoutView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/chart"
                app:layout_constraintStart_toStartOf="@+id/chart"
                app:layout_constraintTop_toBottomOf="@+id/dashBoard" />

        <Chronometer
                android:id="@+id/ctTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_50"
                android:textColor="@color/color_text_selected"
                android:textSize="16sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/dashBoard"
                app:layout_constraintEnd_toEndOf="@+id/dashBoard"
                app:layout_constraintStart_toStartOf="@+id/dashBoard"
                app:layout_constraintTop_toTopOf="@+id/dashBoard" />

        <ImageView
                android:id="@+id/ivPressAim"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:src="@mipmap/icon_wm_aim"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/ctTime"
                app:layout_constraintStart_toStartOf="@+id/ctTime"
                app:layout_constraintTop_toTopOf="@+id/ctTime" />

        <ImageView
                android:id="@+id/ivPress"
                android:layout_width="80dp"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/icon_wm_press"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dashBoard" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pressLayoutView">

            <TextView
                    android:id="@+id/tvPress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/color_text_selected"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/tvPressTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/0"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/tvPress"
                    app:layout_constraintTop_toTopOf="@+id/tvPress" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ======= layout_lung ===================================================== -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_lung"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingTop="@dimen/dp_10"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_press">

        <com.pr.perfectrecovery.view.DialChart07View
                android:id="@+id/chartQy"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:visibility="invisible"
                android:layout_marginBottom="@dimen/dp_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.0" />

        <ImageView
                android:id="@+id/dashBoard2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@mipmap/icon_wm_bp_1"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:id="@+id/ivAim"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@mipmap/icon_wm_qy_error"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/chartQy"
                app:layout_constraintEnd_toEndOf="@+id/dashBoard2"
                app:layout_constraintStart_toStartOf="@+id/dashBoard2"
                app:layout_constraintTop_toBottomOf="@+id/dashBoard2" />

        <ImageView
                android:id="@+id/ivLung"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:src="@mipmap/icon_wm_lung"
                app:layout_constraintEnd_toEndOf="@+id/dashBoard2"
                app:layout_constraintStart_toStartOf="@+id/dashBoard2"
                app:layout_constraintTop_toBottomOf="@+id/dashBoard2" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivLung">

            <TextView
                    android:id="@+id/tvLungError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/color_text_selected"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/tvLungTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/0"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/tvLungError"
                    app:layout_constraintTop_toTopOf="@+id/tvLungError" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:id="@+id/position1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="10sp"
            android:textColor="@color/x_recycler_color_text_gray"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
            android:id="@+id/position2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="10sp"
            android:textColor="@color/x_recycler_color_text_gray"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>